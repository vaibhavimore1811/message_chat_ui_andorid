<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Light Theme -->
    <style name="Base.Theme.Message" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryVariant</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryVariant</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Status bar / Navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>
    <!-- Splash theme: keeps window background same color as splash and hides ActionBar -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use the same color as splash background to avoid white flash -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Actual theme used by the app -->
    <style name="Theme.Message" parent="Base.Theme.Message"/>

</resources>
